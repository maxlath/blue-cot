    "postpublish": "git push --tags",
    "update-toc": "./scripts/update_toc.sh"
  },
  "files": [
    "config",
    "lib"
  ],
  "version": "5.0.0",
  "main": "lib/cot.js",
  "dependencies": {
    "node-fetch": "^2.6.0"
  },
  "engines": {
    "node": ">= 8"
  },
  "author": {
    "name": "maxlath",
    "url": "http://maxlath.eu"
  },
  "repository": {
    "type": "git",
    "url": "http://github.com/maxlath/blue-cot"
  },
  "forkedFrom": "http://github.com/willconant/cot-node",
  "devDependencies": {
    "config": "^3.2.4",
    "git-hooks": "^1.1.10",
    "mocha": "^7.0.0",
    "should": "^13.2.1",
    "standard": "^10.0.3"
  },
  "standard": {
    "globals": [
      "it",
      "describe",
      "beforeEach"
    ]
