{
  "name": "blue-cot",
  "type": "module",
  "description": "CouchDB library with a simple, functional-programing-friendly API, returning promises",
  "keywords": [
    "couch",
    "couchdb",
    "promise",
    "async",
    "await",
    "promises"
  ],
  "scripts": {
    "test": "mocha",
    "test-watch": "mocha --watch",
    "lint": "eslint lib test",
    "git-pre-commit": "npm run lint && npm test",
    "prepublishOnly": "npm run lint && npm test",
    "postpublish": "git push --tags",
    "update-toc": "./scripts/update_toc.sh"
  },
  "files": [
    "config",
    "lib"
  ],
  "version": "7.0.3",
  "main": "lib/cot.js",
  "dependencies": {
    "node-fetch": "^2.6.0"
  },
  "engines": {
    "node": ">= 8"
  },
  "author": {
    "name": "maxlath",
    "url": "http://maxlath.eu"
  },
  "repository": {
    "type": "git",
    "url": "http://github.com/maxlath/blue-cot"
  },
  "forkedFrom": "http://github.com/willconant/cot-node",
  "devDependencies": {
    "@vercel/git-hooks": "^1.0.0",
    "config": "^3.2.4",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "mocha": "^10.2.0",
    "should": "^13.2.3"
  },
  "standard": {
    "globals": [
      "it",
      "describe",
      "beforeEach"
    ]
  }
}
